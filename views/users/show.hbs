<div>
    <a href="/"><h1>Fitbrary</h1></a>
</div>

<div>
    <h1>{{user.userName}}</h1>
    <h3>Name: {{user.firstName}} {{user.lastName}}</h3>
    <h3>Email: {{user.email}}</h3>
    <div>
        <h3>Workouts Created:</h3>
        <div>
            {{#if user.workoutsCreated}}
            {{#each user.workoutsCreated}}
                <a href="/users/{{../userId}}/workouts/{{this._id}}"> <h3> {{this.workoutName}}</h3></a>
            {{/each}}
            {{/if}}
        </div>
    </div>


    <div>
        <form action="/users/{{user._id}}/edit">
            <input class="button" type="submit" value="Edit User Details" />
        </form>
        <form action="/users/{{user._id}}/workouts/newworkout">
            <input class="button" type="submit" value="New Workout" />
        </form>
    </div>

    <div>
        <form action="/users">
            <input class="button" type="submit" value="User Library" />
        </form>
        <form action="/users/{{user._id}}/delete">
            <input class="button" type="submit" value="Delete User" />
        </form>
    </div>
</div>